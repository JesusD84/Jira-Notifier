{
  "manifest_version": 3,
  "name": "Jira Notifier",
  "version": "1.1",
  "description": "Notifica nuevos tickets de Jira basados en consultas JQL",
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://jira-sd.mc1.oracleiaas.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icons/icon48.png"
  }
}
